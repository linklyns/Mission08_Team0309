@model IEnumerable<Mission08_Team0309.Models.UserTask>

@{
    ViewData["Title"] = "Quadrants";

    var q1Tasks = Model.Where(t => t.Quadrant == 1 && !t.Completed);
    var q2Tasks = Model.Where(t => t.Quadrant == 2 && !t.Completed);
    var q3Tasks = Model.Where(t => t.Quadrant == 3 && !t.Completed);
    var q4Tasks = Model.Where(t => t.Quadrant == 4 && !t.Completed);
}

<h1 class="text-center mb-4">Task Quadrants</h1>

<div class="row g-3">
    <!-- Quadrant I: Important / Urgent -->
    <div class="col-md-6">
        <div class="card quadrant-card quadrant-1">
            <div class="card-header">
                <h5 class="mb-0">Quadrant I: Important / Urgent</h5>
            </div>
            <div class="card-body">
                @if (!q1Tasks.Any())
                {
                    <p class="text-muted">No tasks in this quadrant.</p>
                }
                else
                {
                    @foreach (var task in q1Tasks)
                    {
                        <partial name="_TaskCard" model="task" />
                    }
                }
            </div>
        </div>
    </div>

    <!-- Quadrant II: Important / Not Urgent -->
    <div class="col-md-6">
        <div class="card quadrant-card quadrant-2">
            <div class="card-header">
                <h5 class="mb-0">Quadrant II: Important / Not Urgent</h5>
            </div>
            <div class="card-body">
                @if (!q2Tasks.Any())
                {
                    <p class="text-muted">No tasks in this quadrant.</p>
                }
                else
                {
                    @foreach (var task in q2Tasks)
                    {
                        <partial name="_TaskCard" model="task" />
                    }
                }
            </div>
        </div>
    </div>

    <!-- Quadrant III: Not Important / Urgent -->
    <div class="col-md-6">
        <div class="card quadrant-card quadrant-3">
            <div class="card-header">
                <h5 class="mb-0">Quadrant III: Not Important / Urgent</h5>
            </div>
            <div class="card-body">
                @if (!q3Tasks.Any())
                {
                    <p class="text-muted">No tasks in this quadrant.</p>
                }
                else
                {
                    @foreach (var task in q3Tasks)
                    {
                        <partial name="_TaskCard" model="task" />
                    }
                }
            </div>
        </div>
    </div>

    <!-- Quadrant IV: Not Important / Not Urgent -->
    <div class="col-md-6">
        <div class="card quadrant-card quadrant-4">
            <div class="card-header">
                <h5 class="mb-0">Quadrant IV: Not Important / Not Urgent</h5>
            </div>
            <div class="card-body">
                @if (!q4Tasks.Any())
                {
                    <p class="text-muted">No tasks in this quadrant.</p>
                }
                else
                {
                    @foreach (var task in q4Tasks)
                    {
                        <partial name="_TaskCard" model="task" />
                    }
                }
            </div>
        </div>
    </div>
</div>
