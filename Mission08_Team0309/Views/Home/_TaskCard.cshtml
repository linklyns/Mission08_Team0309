@model Mission08_Team0309.Models.UserTask

<div class="task-card mb-2 p-2 border rounded bg-white">
    <div class="d-flex justify-content-between align-items-start">
        <div>
            <strong>@Model.TaskName</strong>
            @if (Model.DueDate.HasValue)
            {
                <br /><small class="text-muted">Due: @Model.DueDate.Value.ToString("MMM dd, yyyy")</small>
            }
            @if (Model.Category != null)
            {
                <br /><span class="badge bg-secondary">@Model.Category.CategoryName</span>
            }
        </div>
        <div class="btn-group-vertical btn-group-sm">
            <a asp-action="Edit" asp-route-id="@Model.TaskId" class="btn btn-outline-primary btn-sm" title="Edit">Edit</a>
            <form asp-action="MarkComplete" asp-route-id="@Model.TaskId" method="post" style="display:inline;">
                <button type="submit" class="btn btn-outline-success btn-sm w-100" title="Mark Complete">Done</button>
            </form>
            <form asp-action="Delete" asp-route-id="@Model.TaskId" method="post" style="display:inline;"
                  onsubmit="return confirm('Are you sure you want to delete this task?');">
                <button type="submit" class="btn btn-outline-danger btn-sm w-100" title="Delete">Delete</button>
            </form>
        </div>
    </div>
</div>
